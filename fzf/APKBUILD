pkgname=fzf
pkgver=0.17.3
pkgrel=1
pkgdesc="A command-line fuzzy finder"
url="https://github.com/junegunn/fzf"
arch="x86_64"
license="MIT"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="https://github.com/junegunn/fzf-bin/releases/download/${pkgver}/${pkgname}-${pkgver}-linux_amd64.tgz ${pkgname}-${pkgver}.tar.gz::https://github.com/junegunn/${pkgname}/archive/${pkgver}.tar.gz"
builddir="${srcdir}"

build() {
    cd "${builddir}"
}

package() {
    cd "$builddir"
    install -D -m755 fzf "$pkgdir"/usr/bin/fzf
    install -D -m644 fzf-0.17.3/shell/completion.zsh "$pkgdir"/usr/share/fzf/completion.zsh
    install -D -m644 fzf-0.17.3/shell/key-bindings.zsh "$pkgdir"/usr/share/fzf/key-bindings.zsh
}

