pkgname=fd
pkgver=7.3.0
pkgrel=0
pkgdesc="A simple, fast and user-friendly alternative to 'find'."
url="https://github.com/sharkdp/fd"
arch="x86_64"
license="Apache-2.0"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="https://github.com/sharkdp/${pkgname}/releases/download/v${pkgver}/${pkgname}-v${pkgver}-x86_64-unknown-linux-musl.tar.gz"
builddir="$srcdir/${pkgname}-v${pkgver}-x86_64-unknown-linux-musl"

build() {
    return 0
}

package() {
    cd "$builddir"
    install -D -m755 fd "$pkgdir"/usr/bin/fd
    install -D -m644 autocomplete/_fd "$pkgdir"/usr/share/zsh/site-functions/_fd
}
