pkgname=ide
pkgver=0.9.13
pkgrel=0
pkgdesc="ide provides a powerful ide that gets out of your way"
url="https://github.com/nrocco/ide"
arch="x86_64"
license="Apache-2.0"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="https://github.com/nrocco/${pkgname}/releases/download/v${pkgver}/${pkgname}-linux-amd64 https://github.com/nrocco/${pkgname}/releases/download/v${pkgver}/completion.zsh https://github.com/nrocco/${pkgname}/releases/download/v${pkgver}/linter https://github.com/nrocco/${pkgname}/releases/download/v${pkgver}/rgit"
builddir="$srcdir"

build() {
    return 0
}

package() {
    cd "$builddir"
    install -D -m755 ide-linux-amd64 "$pkgdir"/usr/bin/ide
    install -D -m755 rgit "$pkgdir"/usr/bin/rgit
    install -D -m755 linter "$pkgdir"/usr/bin/linter
    install -D -m644 completion.zsh "$pkgdir"/usr/share/zsh/site-functions/_ide
}

