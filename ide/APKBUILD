pkgname=ide
pkgver=0.9.10
pkgrel=0
pkgdesc="ide provides a powerful ide that gets out of your way"
url="https://github.com/nrocco/ide"
arch="x86_64"
license="Apache-2.0"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="https://github.com/nrocco/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}-linux-amd64.tar.gz"
builddir="$srcdir/${pkgname}-${pkgver}"

build() {
    return 0
}

package() {
    cd "$builddir"
    install -D -m755 ide "$pkgdir"/usr/bin/ide
    install -D -m755 rgit "$pkgdir"/usr/bin/rgit
    install -D -m644 completion.zsh "$pkgdir"/usr/share/zsh/site-functions/_ide
}

