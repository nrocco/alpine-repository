pkgname=ctagsio
pkgver=0.0.0_git
commit=6712037d394584d269f5b747d13881ac7ba1e7ac
pkgrel=1
pkgdesc="A maintained ctags implementation"
url="https://ctags.io/"
arch="x86_64"
license="GPL-2.0"
depends=""
makedepends="automake autoconf build-base git ca-certificates openssl"
install=""
subpackages=""
options="!check"
source="${pkgname}-${commit}.tar.gz::https://github.com/universal-ctags/ctags/archive/${commit}.tar.gz"
builddir="$srcdir/ctags-${commit}"

build() {
    cd "$builddir"
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
    find "$pkgdir"
}
