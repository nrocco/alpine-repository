pkgname=ctagsio
pkgver=0.0.0_git
commit=41fa40d1ed6d0a0cdf388ecf57b780c08445d27a
pkgrel=1
pkgdesc="A maintained ctags implementation"
url="https://ctags.io/"
arch="x86_64"
license="GPL-2.0"
depends=""
makedepends="automake autoconf build-base git ca-certificates openssl"
install=""
subpackages=""
options="!check"
source="${pkgname}-${commit}.tar.gz::https://github.com/universal-ctags/ctags/archive/${commit}.tar.gz"
builddir="$srcdir/ctags-${commit}"

build() {
    cd "$builddir"
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
    find "$pkgdir"
}
