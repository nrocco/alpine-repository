pkgname=ripgrep
pkgver=0.10.0
pkgrel=1
pkgdesc="ripgrep recursively searches directories for a regex pattern"
url="https://github.com/BurntSushi/ripgrep"
arch="x86_64"
license="MIT"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="https://github.com/BurntSushi/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}-${arch}-unknown-linux-musl.tar.gz"
builddir="$srcdir/"

build() {
    cd "$builddir"
}

package() {
    cd "${builddir}/${pkgname}-${pkgver}-${arch}-unknown-linux-musl"

    install -D -m755 rg "$pkgdir"/usr/bin/rg
    install -D -m644 complete/_rg "$pkgdir"/usr/share/zsh/site-functions/_rg
}

sha512sums="66b704897e9a8307ab527c1b729401e0d36fedf4f77d99d17db7bf9ea1fa47b7ad4ad24402c5b0f635091d7bfaf912d022062436b896856cd2954873f8b68988  ripgrep-0.10.0-x86_64-unknown-linux-musl.tar.gz"
